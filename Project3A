// import the Scanner class
import java.util.Scanner; 

public class Project3A {
  public static void main(String[] args) {
      
    //Declaring variables
    Scanner numberScanner = new Scanner(System.in);
    Scanner messageScanner = new Scanner(System.in);
    String myCharacters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890";
    int numberKey = 0;
    String userInput = "";
    String userOutput = "";
    int userChoice;
      
    //User userInput
    System.out.println("Please enter a message:");
    userInput = messageScanner.nextLine();
    System.out.println("Enter 1 for encrypting and 2 for decrypting:");
    userChoice = numberScanner.nextLine();


if (userChoice== 1) {
  System.out.println("You chose encryption.");
  System.out.println("Choose a numeric key for your cipher:");
  numberKey = numberScanner.nextLine();
}
else if (userChoice== 2) {
  System.out.println("You chose decryption.");
  System.out.println("Choose a numeric key for your cipher:");
  numberKey = numberScanner.nextLine();

  }
numberKey = myCharacters.length() - numberKey;     
  } 
}
